<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="ColoredText" parent="BaseStyleableToast">
        <item name="stTextColor">#F5EEEE</item>
        <item name="stColorBackground">#2196F3</item>
        <item name="android:textSize">15sp</item>
        <item name="stStrokeWidth">2dp</item>
    </style>
    <style name="BaseStyleableToast">
        <item name="stLength">SHORT</item>
    </style>

</resources>
